{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../../out/webstorm",
    "rootDir": "../../..",
    "module": "commonjs",
    "target": "es2020",
    "lib": ["es2020"],
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "../../..",
    "paths": {
      "~/*": ["i18n-ally-src/src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "types/**/*.d.ts",
    "../../shared/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "out"
  ]
}

