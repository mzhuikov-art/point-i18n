{
  "name": "point-i18n",
  "displayName": "Point I18n",
  "publisher": "maksim-zhuikov",
  "version": "1.2.1",
  "repository": {
    "type": "git",
    "url": "https://git.kapitalbank.uz/m.zhuikov/point-i18n"
  },
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.87.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "i18nRemote",
          "title": "Point I18n",
          "icon": "$(globe)"
        }
      ]
    },
    "views": {
      "i18nRemote": [
        {
          "type": "webview",
          "id": "i18nRemote.sidebar",
          "name": "Управление",
          "contextualTitle": "Point I18n"
        }
      ]
    },
    "commands": [
      {
        "command": "i18nRemote.openLogin",
        "title": "Point I18n: Quick Login"
      },
      {
        "command": "i18nRemote.fetchNow",
        "title": "Point I18n: Fetch locales now"
      },
      {
        "command": "i18nRemote.toggleDecorations",
        "title": "Point I18n: Toggle inline translations"
      },
      {
        "command": "i18nRemote.openTranslatedForSearch",
        "title": "Point I18n: Open translated file for search"
      },
      {
        "command": "i18nRemote.configApiBaseUrl",
        "title": "Point I18n: Configure API Base URL"
      },
      {
        "command": "i18nRemote.configLocalizationApiBaseUrl",
        "title": "Point I18n: Configure Localization API Base URL"
      },
      {
        "command": "i18nRemote.configDeepLApiKey",
        "title": "Point I18n: Configure DeepL API Key"
      }
    ],
    "keybindings": [
      {
        "command": "i18nRemote.toggleDecorations",
        "key": "cmd+shift+i",
        "mac": "cmd+shift+i",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Point I18n",
      "properties": {
        "i18nRemote.locale": {
          "type": "string",
          "default": "ru",
          "description": "Язык для отображения переводов"
        },
        "i18nRemote.projectKey": {
          "type": "string",
          "default": "point-frontend",
          "description": "Ключ проекта для локализации"
        },
        "i18nRemote.searchPath": {
          "type": "string",
          "default": "src",
          "description": "Путь для поиска переводов"
        },
        "i18nRemote.apiBaseUrl": {
          "type": "string",
          "default": "",
          "description": "Базовый URL для API (auth, projects, create, update, search)"
        },
        "i18nRemote.localizationApiBaseUrl": {
          "type": "string",
          "default": "",
          "description": "Базовый URL для API локализации (fetch locales)"
        }
      }
    }
  },
  "scripts": {
    "build": "node esbuild.config.js",
    "build:vscode": "node esbuild.config.js",
    "build:webstorm": "tsc --project src/ide/webstorm/tsconfig.json",
    "watch": "esbuild src/ide/vscode/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --sourcemap --watch",
    "package:vscode": "pnpm build && vsce package --no-dependencies",
    "package:webstorm": "cd src/ide/webstorm && export JAVA_HOME=\"/opt/homebrew/opt/openjdk@17\" && export PATH=\"/opt/homebrew/opt/openjdk@17/bin:$PATH\" && ./gradlew buildPlugin"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/node-fetch": "^2.6.2",
    "@types/vscode": "^1.87.0",
    "@vscode/vsce": "^3.6.2",
    "esbuild": "^0.19.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "form-data": "^4.0.0",
    "node-fetch": "^2.6.7"
  }
}
